{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.module.css"
  ],
  "exclude": [
    "src/**/*.stories.ts"
  ],
  "references": [
    {
      "path": "../ui-generic/tsconfig.lib.json"
    },
    {
      "path": "../util/tsconfig.lib.json"
    }
  ]
}
